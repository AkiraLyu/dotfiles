# Maintainer: Akira <akira@example.com>
pkgname=fcitx5-meta
pkgver=6.0
pkgrel=1
pkgdesc="Meta package for fcitx5 and related addons"
arch=('any')
license=('custom:none')

depends=(
    fcitx5
    fcitx5-chinese-addons
    fcitx5-configtool
    fcitx5-gtk
    fcitx5-material-color
    fcitx5-qt
    # 词库
    fcitx5-pinyin-zhwiki
)

package() {
    mkdir -p "$pkgdir/usr/share/doc/$pkgname"
    echo "Meta package for fcitx5 and related addons" > "$pkgdir/usr/share/doc/$pkgname/README"
}

